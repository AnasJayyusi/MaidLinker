<div class="modal fade" id="AddNewCity" tabindex="-1" role="dialog" aria-labelledby="AddNewCityModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddNewCityModal">Add</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Add your modal content here -->
                <form>
                    <div class="form-group">
                        <label style="font-weight:bold;color:#5F7AE7" for="titleEnInput">Title (English):</label>
                        <input type="text" class="form-control" id="titleEnInput" required>
                    </div>
                    <div class="form-group">
                        <label style="font-weight:bold;color:#5F7AE7" for="titleArInput">Title (Arabic):</label>
                        <input type="text" class="form-control" id="titleArInput" required>
                    </div>
                    <div class="form-group">
                        <label for="states-ddl" style="font-weight:bold;color:#5F7AE7">State:</label>
                        <!-- Dropdown list HTML element -->
                        <select class="form-control" id="states-ddl"></select>
                    </div>
                </form>
                <div class="alert alert-danger hidden sm" role="alert">
                    <span id="error-msg-not-fill" style="display:none">Please fill all fields.</span>
                    <span id="error-msg-duplicate" style="display:none">The details for the City have already been added.</span>
                </div>
            </div>
            <div class="modal-footer">
                <button id="close-add-City" type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button id="add-City" type="button" class="btn btn-success" style="background-color:#5F7AE7">Save</button>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {

            // Hide the success message after 2 seconds
            setTimeout(function () {
                $('.alert-success').fadeOut();
            }, 3000);
               // Hide the error message after 2 seconds
                        setTimeout(function () {
                            $('.alert-danger').addClass('hidden');
                        }, 5000);

            $('#openNewCityModal').click(function () {
                $('#titleArInput').val("");
                $('#titleEnInput').val("");

                if ($('#states-ddl').children().length == 0) {
                    $.ajax({
                        url: '@Url.Action("GetStatesDDL", "Common")',
                        type: 'GET',
                        dataType: 'json',
                        success: function (data) {
                            // Clear existing options
                            $('#states-ddl').empty();
                            // Populate the dropdown list
                            var dropdown = $('#states-ddl');
                            $.each(data, function (index, item) {
                                dropdown.append($('<option></option>').val(item.id).text(item.titleEn));
                            });
                        }
                    });
                }
            });

            $('#add-City').click(function () {
                var city = {
                    TitleAr: $('#titleArInput').val(),
                    TitleEn: $('#titleEnInput').val(),
                    stateId: $('#states-ddl').val()
                };

                $.ajax({
                    url: '/Admin/AddCity', // Replace with your actual API endpoint URL
                    type: 'POST',
                    data: JSON.stringify(city),
                    contentType: 'application/json',
                    success: function (response) {
                        // Show the success message
                        $('.alert-success').removeClass('hidden').hide().fadeIn();
                        // Close the modal after the success message fades out
                        $("#close-add-City").trigger("click");
                        $('#dataTableContainer').load('/Admin/GetCities');

                        // Hide the success message after 2 seconds
                        setTimeout(function () {
                            $('.alert-success').fadeOut();
                        }, 3000);

                    },
                    error: function (xhr, status, error) {
                        // Show the error message
                        $('.alert-danger').removeClass('hidden');
                        var msg = xhr.responseText;
                          
                        if (msg == "Please fill all fields.") {
                            $('#error-msg-not-fill').show();
                            $('#error-msg-duplicate').hide();
                        }

                        if (msg == "The details for the City have already been added.") {
                            $('#error-msg-not-fill').hide();
                            $('#error-msg-duplicate').show();
                        }
                        // Hide the error message after 2 seconds
                        setTimeout(function () {
                            $('.alert-danger').addClass('hidden');
                        }, 5000);

                    }
                });
            });
        });
    </script>
