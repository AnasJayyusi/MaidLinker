@model GeneralSettingsViewModel

<head>
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">
</head>



<div id="page-top" class="mt-5">
    <div id="wrapper">
        <!-- Sidebar -->
        @Html.Partial("_Sidebar")
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content" style="background-color:lavender">
                <!-- Begin Page Content -->
                <div class="container-fluid mt-5">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h6 style="font-weight:bold;color:#5F7AE7 " class="h6 mb-0 ">   <i class="fas fa-cogs"></i> General Settings</h6>
                        <!--ToDo:Move To Partial View -->
                        @Html.Partial("_Userbar")
                    </div>
                    <!-- Content Row -->
                    <div class="row">
                        <!-- Area Chart -->
                        <div class="col-xl-12 col-lg-12">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                              
                                <!-- Card Body -->
                                <div class="card-body" style="max-height: 768px; overflow-y: auto;">

                                    <br />

                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">
                                               
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <form method="post" action="UpdateGeneralSetting">
                                                @Html.AntiForgeryToken()

                                                <div class="row">
                                                    <div class="form-group col-md-6">
                                                        <label for="PhoneNumber">
                                                            <i class="fas fa-phone-alt"></i> Phone Number
                                                        </label>
                                                        <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                                                    </div>

                                                    <div class="form-group col-md-6">
                                                        <label for="WhatsAppNumber">
                                                            <i class="fab fa-whatsapp"></i> WhatsApp Number
                                                        </label>
                                                        <input type="text" id="WhatsAppNumber" name="WhatsAppNumber" class="form-control" value="@Model.WhatsAppNumber" />
                                                    </div>

                                                    <div class="form-group col-md-6">
                                                        <label for="AddressAr">
                                                            <i class="fas fa-map-marker-alt"></i> Address (Arabic)
                                                        </label>
                                                        <input type="text" id="AddressAr" name="AddressAr" class="form-control" value="@Model.AddressAr" />
                                                    </div>

                                                    <div class="form-group col-md-6">
                                                        <label for="AddressEn">
                                                            <i class="fas fa-map-marker-alt"></i> Address (English)
                                                        </label>
                                                        <input type="text" id="AddressEn" name="AddressEn" class="form-control" value="@Model.AddressEn" />
                                                    </div>

                                                    <div class="form-group col-md-6">
                                                        <label for="FacebookUrl">
                                                            <i class="fab fa-facebook-square"></i> Facebook URL
                                                        </label>
                                                        <input type="url" id="FacebookUrl" name="FacebookUrl" class="form-control" value="@Model.FacebookUrl" />
                                                    </div>

                                                    <div class="form-group col-md-6">
                                                        <label for="InstagramUrl">
                                                            <i class="fab fa-instagram"></i> Instagram URL
                                                        </label>
                                                        <input type="url" id="InstagramUrl" name="InstagramUrl" class="form-control" value="@Model.InstagramUrl" />
                                                    </div>
                                                </div>

                                                <div style="text-align:end" class="text-end">
                                                    <button style="background-color:#5F7AE7" type="submit" class="btn btn-success">
                                                        <i class="fas fa-save"></i> Save Settings
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

</div>



@section Scripts {

    <script>
        $(function () {
            var successMsg = '@ViewBag.SuccessMessage';
            var errorMsg = '@ViewBag.ErrorMessage';

            if (successMsg) {
                showSuccessMessage();
            }
            if (errorMsg) {
                   showErrorMessage();
            }
        });
    </script>
}