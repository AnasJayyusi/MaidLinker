<script>


    $(document).ready(function () {
        // JavaScript to detect screen size
        if (window.innerWidth <= 768) { // Adjust threshold as needed
            // Set flag indicating the device is mobile

            $("#mobiledropDown").show()
            $("#deskTopdropDown").hide()
        }
        else {
            $("#mobiledropDown").hide()
            $("#deskTopdropDown").show()
        }
        $.ajax({
            url: '/Notification/GetNotificationsCount',  // Replace 'your-api-url' with the actual API endpoint URL
            method: 'GET',
            success: function (response) {
                // On success, loop through the response data and populate the dropdown options
                
                $(".notificationsCount").text(response);
                

                if ($(".notificationsCount").text() > 0) {
                    $("#notifications-count").removeClass("badge-light").addClass("badge-danger");
                }

                //$.each(response, function (index, item) {
                //    li.textContent = `${item.titleEn} says `;
                //});


            },
            error: function () {
                console.log('Error occurred while retrieving degree data.');
            }
        });

    })
    function showNotifications() {
        var notificationContainer = $('#notificationContainer');

        $.ajax({
            url: '/Notification/GetNotifications',
            type: 'GET',
            success: function (response) {
                notificationContainer.html(response);
                markAllNotificationsReaded();
            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
            }
        });
    }
    function markAllNotificationsReaded() {
        //var notificationContainer = $('#notificationContainer');

        $.ajax({
            url: '/Notification/MarkAllNotificationsReaded',
            type: 'GET',
            success: function (response) {
                $(".notificationsCount").text(0);
                $("#notifications-count").removeClass("badge-danger").addClass("badge-light");

            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
            }
        });
    }
    var currentUrl = window.location.href;
    if (currentUrl.includes("/ServiceProvider/Profile")) {
        // Show the loading spinner
        document.getElementById('loadingSpinner').style.display = 'block';

        // Hide the loading spinner after 3 seconds
        setTimeout(function () {
            document.getElementById('loadingSpinner').style.display = 'none';
        }, 3000);
    }

    if (currentUrl.includes("/ServiceProvider/Referrals")) {
        // Show the loading spinner
        document.getElementById('loadingSpinner').style.display = 'block';

        // Hide the loading spinner after 3 seconds
        setTimeout(function () {
            document.getElementById('loadingSpinner').style.display = 'none';
        }, 800);
    }

    if (currentUrl.includes("/ServiceProvider/AddServices")) {
        // Show the loading spinner
        document.getElementById('loadingSpinner').style.display = 'block';

        // Hide the loading spinner after 3 seconds
        setTimeout(function () {
            document.getElementById('loadingSpinner').style.display = 'none';
        }, 800);
    }

    function isEnglishCulture() {
        var isEn = true;
        var name = "CultureInfo"
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) {
            var cultureInfo = parts.pop().split(';').shift();
            if (cultureInfo == "en-US")
                isEn = true;
            else
                isEn = false;
        }
        return isEn;
    }
</script>



